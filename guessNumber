from random import randrange
import secrets, string, random

loop = 0

while loop < 1:
    x = random.randrange(9)
    guessedChoice = int(input("Think hard and long and guess... "))
    if guessedChoice == x:
        print("You are lucky!!! :) ")
        loop += 1
    else:
        print("You are not lucky :( ")
        print(("Number was " + str(x)))